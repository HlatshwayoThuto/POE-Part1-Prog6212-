    <p class="info">@ViewBag.Message</p>
}
<table class="claims-table">
    <thead><tr><th>Claim ID</th><th>Lecturer</th><th>Hours</th><th>Rate</th><th>Submitted</th><th>Action</th></tr></thead>
    <tbody>
        <tr>
            <td>CLM-001</td><td>Dr. Lecturer</td><td>16</td><td>R250</td><td>2025-08-31</td>
            <td>
                <form method="post" action="/Coordinator/Verify" style="display:inline"><input type="hidden" name="id" value="CLM-001" /><button class="btn small">Verify</button></form>
                <form method="post" action="/Coordinator/Reject" style="display:inline"><input type="hidden" name="id" value="CLM-001" /><button class="btn small">Reject</button></form>
            </td>
        </tr>
    </tbody>
</table>
